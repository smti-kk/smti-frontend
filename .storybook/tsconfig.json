{
  "extends": "../tsconfig.json",
  "exclude": [
    "../src/test.ts",
    "../src/**/*.spec.ts",
    "../projects/**/*.spec.ts"
  ],
  "compilerOptions": {
    "baseUrl": "../",
    "paths": {
      "@injection/*": ["src/app/injection/*"],
      "@api/*": ["src/app/api/*"],
      "@service/*": ["src/app/service/*"]
    },
    "experimentalDecorators": true
  },
  "include": [
    "../src/**/*",
    "../projects/**/*"
  ]
}
